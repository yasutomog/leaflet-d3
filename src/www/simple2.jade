doctype html
html
    head
        title="leaflet-d3-sample"
        meta(charset="utf-8")
        link(rel='stylesheet', href='./css/app.css')
        link(rel='stylesheet', href='./lib/leaflet-0.7.5/leaflet.css')
        link(rel='stylesheet', href='http://fonts.googleapis.com/icon?family=Material+Icons')
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.1/css/materialize.min.css', media="screen,projection")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
    body#main
        div.navbar-fixed
            nav
                div.nav-wrapper
                    a.brand-logo(href="#") leaflet & d3.js sample
                    ul#nav-mobile.right.hide-on-med-and-down
                        li
                            a(href="") HOME
                                i.material-icons.left search
                        li
                            a(href="/simple.html") SIMPLE
                                i.material-icons.left place
                        li
                            a(href="/japan.html") JAPAN
                                i.material-icons.left map
                        li
                            a(href="/simple2.html") SIMPLE2
                                i.material-icons.left directions
        div.row
            div.col.s12.m12.l7
                div#map.z-depth-1
            div.col.s12.m12.l5
                div#app.z-depth-1
                    table#setting.highlight
                        thead
                            tr
                                th Material
                                th Quantity
                                th Unit price
                                th value
                                th on/off
                        tbody
                            tr(v-repeat="mapInfo")
                                td {{material}}
                                td {{quantity}}
                                td {{unitPrice}}
                                td
                                    div.range-field
                                        input(type="range", min="0" max="100", value="30")
                                        span.thumb
                                            span.value
                                td
                                    div.switch
                                        label
                                            input(type="checkbox")
                                            span.lever
                        tfoot
                            tr
                                td(colspan="6")
                                    a.btn-floating.btn-large.waves-effect.waves-light.red.right
                                        i.material-icons delete
                                    a.btn-floating.btn-large.waves-effect.waves-light.right(v-on="click: _onClick")
                                        i.material-icons add
        script(src='./lib/leaflet-0.7.5/leaflet.js', charset='UTF-8')
        script(src='./js/simple.bundle.js', charset='UTF-8')
        script(src='http://d3js.org/topojson.v1.min.js', charset='UTF-8')
